<resources>

    <!-- Dark application theme. -->
    <style name="DarkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/White</item>
        <item name="CalBckColor">@color/primaryColor</item>
        <item name="keyBack">#2E2E2E</item>


    </style>

    <style name="DarkTheme.Bar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorAccent">@color/colorAccent2</item>
        <item name="backgroundcolor">#2E2E2E</item>
        <item name="textcolor">#ffffff</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <!--Light application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor2</item>
        <item name="colorPrimaryDark">@color/primaryColorDark2</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="CalBckColor">#E53935</item>
        <item name="keyBack">@color/White</item>

    </style>

    <style name="AppTheme.Bar" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/primaryColor2</item>
    <item name="colorPrimaryDark">@color/primaryColorDark2</item>
    <item name="colorAccent">@color/colorAccent2</item>
        <item name="backgroundcolor">#FFFFFF</item>
        <item name="textcolor">#000000</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation" >@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.Popupoverlay" parent="ThemeOverlay.AppCompat.Light">
    <item name="android:textColor">@color/Black</item>
    </style>
    <style name="AppTheme.Popupoverlay.Dark" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColor">@color/White</item>
    </style>

</resources>
